html  
    head
        title= title
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
        link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet")
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
        style.
            .table>tbody>tr>td
                {border: 0px;}
    body(style = 'background: powderblue')
        nav(class='navbar navbar-inverse' style='background-color: rgba(10, 10, 10, 1);margin: 1; padding-left:0px;')
            div(class='navbar-text' style='width: 95%; text-align:center;')
                p(style="color:powderblue; font-family:  'Times New Roman', serif;font-size:200%;" class="centered text-center") My Library
        nav(class='navbar navbar-inverse' style='background-color: rgba(4, 4, 5, 1);  margin:1;')
            div(class='container-fluid')
                ul(class='nav navbar-nav')
                    li <a href='/'>Home</a>
                    li <a href='/checkin' style='height: 10px'>Check In</a>
                    li(class='active') <a href='/borrower'>Add User</a>
                    li <a href='/fines' style='height: 10px'>Fines</a>
        p(style="color:0f0f58; font-family:  'Times New Roman', serif;font-size:200%;" class="centered text-center") #{info}
        div(class='container')
            form(method = 'GET' action = '/borrower')
                div(class='form-group')
                    table.table(style = 'width: 50%; border:0px' align = 'center')
                        tbody
                            tr
                                td(style = 'width: 20%;'): label SSN 
                                td: input(type='text' class='form-control' name='ssn' value = (details == undefined) ? '': details.ssn placeholder='Enter SSN...' maxlength='9' required = 'true' )
                            tr    
                                td: label First Name 
                                td: input(type='text' class='form-control' name='fname' value = (details == undefined) ? '': details.fname placeholder='Enter your first name...' maxlength='250' required = 'true')
                            tr
                                td: label Last Name 
                                td: input(type='text' class='form-control' name='lname' value = (details == undefined) ? '': details.lname placeholder='Enter your last name...' maxlength='250' required = 'true')
                            tr
                                td: label Address 
                                td: input(type='textarea' class='form-control' name='addr' value = (details == undefined) ? '': details.addr placeholder='Enter your address...' maxlength='250' required = 'true')
                            tr
                                td: label City 
                                td: input(type='text' class='form-control' name='city' value = (details == undefined) ? '': details.city placeholder='Enter city...' maxlength='250' required = 'true')
                            tr
                                td: label State 
                                td: input(type='text' class='form-control' name='state' value = (details == undefined) ? '': details.state placeholder='Enter state...' maxlength='250' required = 'true')
                            tr
                                td: label Phone 
                                td: input(type='text' class='form-control' name='phone' value = (details == undefined) ? '': details.phone placeholder='Enter phone #...' maxlength='12' required = 'true')
                            tr
                                td(colspan = 2 align = 'right')
                                    button(type = 'submit' class='btn btn-primary' style = 'width: 150px' float = 'right')|Add User