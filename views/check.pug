html  
  head
    title= title
    script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
    script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
  body(style = 'background: powderblue')
  nav(class='navbar navbar-inverse' style='background-color: rgba(10, 10, 10, 1);margin: 1; padding-left:0px;')
    div(class='navbar-text' style='width: 95%; text-align:center;')
      p(style="color:powderblue; font-family:  'Times New Roman', serif;font-size:200%;" class="centered text-center") My Library
  nav(class='navbar navbar-inverse' style='background-color: rgba(4, 4, 5, 1);  margin:1;')
      div(class='container-fluid')
        ul(class='nav navbar-nav')
          li <a href='/'>Home</a>
          li <a href='/checkin' style='height: 10px'>Check In</a>
          li <a href='/borrower' style='height: 10px'>Add User</a>
          li <a href='/fines' style='height: 10px'>Fines</a>

  div(style = ' margin: auto; width: 60%; padding: 10px; text-align:center;' )
    h1 #{message[0].title} 
    h4 &nbsp; Authors: #{message[0].name}    
    img(src = message[0].cover)
    h4 &nbsp; Publisher: #{message[0].publisher}  
    h4 &nbsp; Pages: #{message[0].pages}  
  
    -if(message[0].available != 0)
      form(method = 'GET' action = '/check' class='form-inline')
        div(class='form-group')   
          label Card Number 
          | &nbsp; &nbsp;
          input(type = 'text', name = 'cardNum' class='form-control' placeholder='Enter your card id...')
          | &nbsp; &nbsp;
          input(type = 'hidden' name = 'isbn' value = message[0].isbn)
          input(type = 'hidden' name = 'flag' value = 'formcheck')
          button(type = 'submit' class='btn btn-primary' style = 'width: 150px') CheckOut
      p(style="color: 0f0f58; font-family:  'Times New Roman', serif;font-size:150%;") #{test}
    -else
      h4 &nbsp; Sorry, the book is not available!!! 

